{
  "restartable": "rs",
  "ignore": [".git", "f2e", "test", "logs", "dist", "node_modules/**/node_modules", "views"],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": ["./src"],
  "ext": "js,json",
  "legacy-watch": false
}
